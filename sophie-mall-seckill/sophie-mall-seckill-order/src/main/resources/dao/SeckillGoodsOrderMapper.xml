<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sophie.sophiemall.seckill.order.mapper.SeckillGoodsOrderMapper">
    <resultMap id="baseResultMap" type="io.binghe.seckill.order.domain.model.entity.SeckillOrder">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="goods_id" property="goodsId" jdbcType="INTEGER"/>
        <result column="goods_name" property="goodsName" jdbcType="VARCHAR"/>
        <result column="activity_price" property="activityPrice" jdbcType="DECIMAL"/>
        <result column="quantity" property="quantity" jdbcType="INTEGER"/>
        <result column="order_price" property="orderPrice" jdbcType="DECIMAL"/>
        <result column="activity_id" property="activityId" jdbcType="INTEGER"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, goods_id, goods_name, activity_price, quantity, order_price, activity_id, status, create_time
    </sql>

    <insert id="saveSeckillOrder" parameterType="io.binghe.seckill.order.domain.model.entity.SeckillOrder">
        insert into seckill_goods_order ( <include refid="Base_Column_List"/> )
        values (#{id}, #{userId}, #{goodsId}, #{goodsName}, #{activityPrice}, #{quantity}, #{orderPrice}, #{activityId}, #{status}, #{createTime})
    </insert>

    <select id="getSeckillOrderByGoodsId" resultMap="baseResultMap">
        select <include refid="Base_Column_List"/> from seckill_goods_order where goods_id = #{goodsId}
    </select>

    <delete id="deleteOrder">
        delete from seckill_goods_order where id = #{orderId} and goods_id = #{goodsId}
    </delete>
</mapper>